<resources>
    <!-- Set the automatic brightness mode on by default -->
    <bool name="def_screen_brightness_automatic_mode">true</bool>

    <!-- Default screen brightness, from 0 to 255. 82 is 32%. -->
    <integer name="def_screen_brightness">82</integer>

    <!-- Set to true to turn on BT by default -->
    <bool name="def_bluetooth_on">false</bool>

    <!-- Set to true to turn on Wifi by default -->
    <bool name="def_wifi_on">true</bool>

    <!-- Disable all sound effects -->
    <integer name="def_lockscreen_sounds_enabled">0</integer>
    <bool name="def_dtmf_tones_enabled">false</bool>
    <bool name="def_sound_effects_enabled">false</bool>
    <bool name="def_charging_sounds_enabled">false</bool>

    <!-- Speed up animations -->
    <fraction name="def_window_animation_scale">50%</fraction>
    <fraction name="def_window_transition_scale">50%</fraction>
    <fraction name="def_animator_duration_scale">50%</fraction>
</resources>
